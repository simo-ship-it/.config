yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# bsp or float (default: float)
yabai -m config layout bsp

yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 on

# Set all padding and gaps to 20pt (default: 0)
yabai -m config top_padding    5
yabai -m config bottom_padding 5
yabai -m config left_padding   5
yabai -m config right_padding  5
yabai -m config window_gap     5


yabai -m config window_border   on \
                active_window_border_color 0xffF7DDBC   \
                normal_window_border_color 0xff2a2f38   \
                window_border_width        3            \
                window_border_radius       12           \
                window_shadow              off


#yabai -m rule --add app="Impostazioni di Sistema" sticky=on layer=above manage=off

# spacebar padding on top screen
yabai -m config external_bar                 all:38:0

